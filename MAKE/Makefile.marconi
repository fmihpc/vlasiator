#system
INC_PAPI = -I$(LIBRARY_PREFIX)/papi/include
LIB_PAPI = -L$(LIBRARY_PREFIX)/papi/lib -lpapi -lpfm

#header libraries

INC_EIGEN = -I$(HEADER_LIBRARY_PREFIX)/eigen
